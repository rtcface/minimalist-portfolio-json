---
import { basics } from "@cv"

interface Props {
  title: string
  details?: {
    image: string
    summary: string
    url: string
  }
  language?: string
}

const { title, details, language = "es" } = Astro.props

const { image, summary, url } = details || {
  image: "/me.webp",
  summary: "Portfolio",
  url: "https://midu.dev",
}

const nextLanguage = language === "es" ? "en" : "es"
const nextLanguageLabel = language === "es" ? "EN" : "ES"
const nextUrl = language === "es" ? "/en" : "/"
---

<!doctype html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ''} />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content="" />
  </head>
  <body>
    <div class="language-switch no-print">
      <a href={nextUrl}>{nextLanguageLabel}</a>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  .language-switch {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }
  
  .language-switch a {
    text-decoration: none;
    color: #000;
    background: #eee;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    font-weight: bold;
    transition: background 0.3s;
  }
  
  .language-switch a:hover {
    background: #ddd;
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
</style>
